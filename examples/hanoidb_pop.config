{mode, max}.

{duration, 10}.

{concurrent, 1}.

% {driver, basho_bench_driver_eleveldb}.
{driver, basho_bench_driver_hanoidb}.

{key_generator, {int_to_bin_bigendian,
    {partitioned_sequential_int, 1000000}}}.

{value_generator, {fixed_bin, 1000}}.

{operations, [{put, 1}]}.

{hanoidb_flags, [{sync_strategy, sync}]}.

%% the second element in the list below (e.g., "../../public/eleveldb") must
%% point to the relevant directory of a eleveldb installation 
% {code_paths, ["deps/eleveldb/ebin"]}.
{code_paths, ["deps/snappy/ebin", "deps/hanoidb/ebin", "deps/plain_fsm/ebin", "deps/ebloom/ebin"]}.

{eleveldb_dir, "/tmp/eleveldb.bench"}.
{hanoidb_dir, "/tmp/hanoidb.bench"}.
{eleveldb_num_instances, 1}.